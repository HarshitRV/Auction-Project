<% layout('layouts/boilerplate') %> 

<form action="/products" method="POST">
    <div>
        <label for="title">Title</label>
    </div>
    <div>
        <input type="text" name="product[title]" id="title">
    </div>
    <div>
        <label for="description">Description</label>
    </div>
    <div>
        <input type="text" name="product[description]" id="description">
    </div>
    <div>
        <label for="basePrice">Base Price</label>
    </div>
    <div>
        <input type="number" name="product[basePrice]" step="any" id="basePrice">
    </div>
    <div>
        <label for="images">Images</label>
    </div>
    <div>
        <input type="text" name="product[images]" id="">
    </div>
    <div>
        <label for="duration">Duration</label>
    </div>
    <div>
        <select name="product[duration]" id="duration">
            <option value="3">3 day</option>
            <option value="5">5 day</option>
            <option value="7">7 day</option>
            <option value="7">10 day</option>
        </select>
    </div>
    <div>
        <label for="category">Select Category</label>
    </div>
    <div>
        <select name="product[category]" id="category">
            <option value="art">Art</option>
            <option value="antiques">Antiques</option>
            <option value="vehicle">Vehicle</option>
            <option value="books">Books</option>
            <option value="collectible">Collectible</option>
            <option value="other">Other</option>
        </select>
    </div>
    <div>
        <button type="submit">Put this up for bidding</button>
    </div>
</form>